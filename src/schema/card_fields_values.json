{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CardFieldValues",
  "definitions": {
    "deferredValues": {
      "type": "object",
      "title": "DeferredValues",
      "properties": {
        "isDeferred": {
          "type": "boolean"
        },
        "graceMonths": {
          "type": "number"
        },
        "months": {
          "type": "number"
        },
        "creditType": {
          "type": "string"
        }
      }
    },
    "fieldValidity": {
      "type": "object",
      "title": "FieldValidity",
      "additionalProperties": false,
      "properties": {
        "isValid": {
          "type": "boolean"
        },
        "errorType": {
          "type": "string",
          "enum": ["empty", "invalid", "number of months required", "credit type required"]
        }
      },
      "required": ["isValid"]
    },
    "fieldInstance": {
      "type": "object",
      "title": "FieldInstance",
      "additionalProperties": false,
      "properties": {
        "selector": {
          "type": "string"
        },
        "value": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "$ref": "#/definitions/deferredValues"
            }
          ]
        },
        "hostedField": {
          "type": "object"
        },
        "validity": {
          "$ref": "#/definitions/fieldValidity"
        }
      },
      "required": ["selector", "validity"]
    }
  },
  "properties": {
    "cardholderName": {
      "$ref": "#/definitions/fieldInstance"
    },
    "cardNumber": {
      "$ref": "#/definitions/fieldInstance"
    },
    "cvv": {
      "$ref": "#/definitions/fieldInstance"
    },
    "deferred": {
      "$ref": "#/definitions/fieldInstance"
    },
    "expirationDate": {
      "$ref": "#/definitions/fieldInstance"
    }
  },
  "type": "object"
}
