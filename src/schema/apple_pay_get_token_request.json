{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ApplePaymentEvent",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "ApplePayGetTokenRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "data": {
          "type": "string"
        },
        "header": {
          "type": "object",
          "additionalItems": false,
          "properties": {
            "ephemeralPublicKey": {
              "type": "string"
            },
            "publicKeyHash": {
              "type": "string"
            },
            "transactionId": {
              "type": "string"
            }
          },
          "required": ["ephemeralPublicKey", "publicKeyHash", "transactionId"]
        },
        "signature": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": ["data", "header", "signature", "version"]
    }
  },
  "properties": {
    "payment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "token": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "paymentData": { "$ref": "#/definitions/ApplePayGetTokenRequest" }
          },
          "required": ["paymentData"]
        }
      },
      "required": ["token"]
    },
    "validationURL": {
      "type": "string"
    }
  },
  "required": ["payment", "validationURL"]
}
